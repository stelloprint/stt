{
  "name": "stt",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "check": "ultracite check",
    "fix": "ultracite fix"
  },
  "dependencies": {
    "@stt/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@stt/config": "workspace:*",
    "typescript": "catalog:",
    "@biomejs/biome": "2.4.0",
    "ultracite": "7.2.3",
    "lefthook": "^2.0.13"
  },
  "packageManager": "bun@1.3.0"
}
